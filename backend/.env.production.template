# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

# Environment
ENVIRONMENT=production
DEBUG=false
APP_NAME="HR Assistant API"
APP_VERSION="1.0.0"

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEYS=["api-key-1","api-key-2","api-key-3"]

# Database
DATABASE_URL=postgresql+asyncpg://hruser:changeme@postgres:5432/hrdb
VECTOR_DB_URL=postgresql+asyncpg://hruser:changeme@postgres:5432/hrdb
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://:changeme@redis:6379/0
REDIS_PASSWORD=changeme
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# LLM Configuration
LLM_ENDPOINT=https://api.openai.com/v1
LLM_API_KEY=your-llm-api-key
LLM_MODEL_NAME=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=500
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=3

# Translation Service
TRANSLATION_PROVIDER=deepl
TRANSLATION_API_KEY=your-translation-api-key
TRANSLATION_CACHE_ENABLED=true
TRANSLATION_MAX_CACHE_SIZE=10000

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=32

# Reranking
RERANK_MODEL_NAME=hotchpotch/japanese-bge-reranker-v2-m3-v1
RERANK_ENABLED=true
RERANK_TOP_K=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# CORS
ALLOWED_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]
ENABLE_CORS=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_ENDPOINT=http://jaeger:4317
TRACING_SERVICE_NAME=hr-assistant

# Logging
LOG_LEVEL=INFO
LOG_FILE=hr_assistant.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=true

# Feature Flags
FEATURE_MULTILINGUAL=true
FEATURE_FEEDBACK=true
FEATURE_DOCUMENT_UPLOAD=true
FEATURE_ANALYTICS=true

# HR Assistant Settings
HR_MAX_QUERY_LENGTH=500
HR_MIN_CONFIDENCE_THRESHOLD=0.3
HR_CONFLICT_CONFIDENCE_MULTIPLIER=0.7
HR_MAX_RECOMMENDATIONS=3
HR_DEFAULT_LANGUAGE=en
HR_SUPPORTED_LANGUAGES=["en","ja","zh","ko","es","fr","de"]

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".txt",".docx",".md"]
UPLOAD_TEMP_DIR=/tmp/hr_uploads

# Data Retention
RETENTION_DAYS=90
CLEANUP_ENABLED=true
CLEANUP_CRON="0 2 * * *"

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Async Configuration
ASYNC_ENABLED=true
ASYNC_WORKER_THREADS=4
ASYNC_MAX_CONNECTIONS=100

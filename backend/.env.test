# Test Environment Configuration
# Minimal configuration for local testing

# Environment
ENVIRONMENT=development
DEBUG=true
APP_NAME="HR Assistant API - TEST"
APP_VERSION="1.0.0"

# Security - Test keys only
SECRET_KEY=test-secret-key-do-not-use-in-production
JWT_SECRET=test-jwt-secret-do-not-use-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEYS=["test-api-key-1","test-api-key-2"]
API_KEY_HEADER=X-API-Key

# Database
DATABASE_URL=postgresql+asyncpg://hruser:testpass@localhost:5433/hrdb_test
VECTOR_DB_URL=postgresql+asyncpg://hruser:testpass@localhost:5433/hrdb_test
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# LLM Configuration (Mock for testing)
LLM_ENDPOINT=http://localhost:8080
LLM_API_KEY=test-llm-key
LLM_MODEL_NAME=gpt-4
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=500
LLM_TIMEOUT_SECONDS=30
LLM_MAX_RETRIES=2

# Translation Service (Mock for testing)
TRANSLATION_PROVIDER=custom
TRANSLATION_API_KEY=test-translation-key
TRANSLATION_ENDPOINT=http://localhost:8081
TRANSLATION_CACHE_ENABLED=true
TRANSLATION_MAX_CACHE_SIZE=100

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=8

# Reranking
RERANK_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_ENABLED=false
RERANK_TOP_K=5

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# CORS
ALLOWED_ORIGINS=["*"]
ENABLE_CORS=true

# Monitoring (Disabled for testing)
METRICS_ENABLED=false
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=
TRACING_SERVICE_NAME=hr-assistant-test

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=
LOG_JSON_FORMAT=false

# Feature Flags
FEATURE_MULTILINGUAL=true
FEATURE_FEEDBACK=true
FEATURE_DOCUMENT_UPLOAD=true
FEATURE_ANALYTICS=false

# HR Assistant Settings
HR_MAX_QUERY_LENGTH=500
HR_MIN_CONFIDENCE_THRESHOLD=0.3
HR_CONFLICT_CONFIDENCE_MULTIPLIER=0.7
HR_MAX_RECOMMENDATIONS=3
HR_DEFAULT_LANGUAGE=en
HR_SUPPORTED_LANGUAGES=["en","ja"]

# File Upload
MAX_UPLOAD_SIZE_MB=5
ALLOWED_UPLOAD_EXTENSIONS=[".pdf",".txt",".docx",".md"]
UPLOAD_TEMP_DIR=/tmp/hr_uploads

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=false
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Async Configuration
ASYNC_ENABLED=true
ASYNC_WORKER_THREADS=2
ASYNC_MAX_CONNECTIONS=10
